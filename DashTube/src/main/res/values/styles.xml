<resources>
    <!--
      ~ Base application theme
      -->
    <style name="TawTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    </style>

    <!--
      ~ Text styling for the details activity
      -->
    <style name="DashTubeDetailTitleText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- No colour specified, as set in the Detail Activity based on TfL branding -->
    </style>

    <style name="DashTubeDetailDescriptionText" parent="DashTubeDetailTitleText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <!--
      ~ Text styling for changelog/about dialog boxes
      -->
    <style name="DashTubeDialogText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


</resources>
